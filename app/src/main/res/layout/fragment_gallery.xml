<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:id="@+id/text_gallery1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change the background color of the app" />

    <Button
        android:id="@+id/buttonWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="White" />

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Red" />

    <Button
        android:id="@+id/buttonGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Green" />

    <Button
        android:id="@+id/buttonBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Blue" />

    <TextView
        android:id="@+id/text_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API Used: exchangerate-api, provides constantly updated and accurate exchange rates for all currencies"
        android:layout_marginTop="16dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App: designed to allow the user to see the exchange rates of currency and convert different currencies."
        android:layout_marginTop="16dp"
        android:textAlignment="center" />

</LinearLayout>
